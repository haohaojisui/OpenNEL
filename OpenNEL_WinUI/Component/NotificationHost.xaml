<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="OpenNEL_WinUI.NotificationHost"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OpenNEL_WinUI">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Spacing="6">
        <ItemsControl ItemsSource="{x:Bind Items}">
            <ItemsControl.ItemContainerStyle>
                <Style TargetType="ContentPresenter">
                    <Setter Property="Margin" Value="0,8,0,0"/>
                    <Setter Property="HorizontalAlignment" Value="Stretch"/>
                </Style>
            </ItemsControl.ItemContainerStyle>
            <ItemsControl.ItemTemplate>
                <DataTemplate x:DataType="local:ToastItem">
                    <Grid RenderTransformOrigin="0.5,0" Loaded="Toast_Loaded">
                        <Grid.RenderTransform>
                            <TranslateTransform Y="-40"/>
                        </Grid.RenderTransform>
                        <Border Padding="12,8" CornerRadius="4" Background="{x:Bind Background}" Opacity="0.98" MaxWidth="560" HorizontalAlignment="Center">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <FontIcon Glyph="{x:Bind Glyph}" Foreground="{x:Bind Foreground}" FontSize="16" VerticalAlignment="Top"/>
                                <TextBlock Grid.Column="1" Text="{x:Bind Text}" Foreground="{x:Bind Foreground}" FontWeight="SemiBold" TextWrapping="Wrap"/>
                            </Grid>
                        </Border>
                    </Grid>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </StackPanel>
</UserControl>
